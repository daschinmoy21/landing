---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - Blocks
import Hero from '../components/blocks/hero/SimpleHeroPrimary.astro'
import BasicFeatures from '../components/blocks/features/StickyBasicFeatures.astro'
import CTA from '../components/blocks/cta/CTAPrimary.astro'

// Content
// - SEO
const SEO = {
	title: 'Mizu Light Astro Theme | Features',
	description:
		'Explore the powerful features of Mizu Light — a responsive Astro theme crafted for SaaS and startup websites that need speed, flexibility, and style.'
}
// - Hero
const heroData = {
	title: 'Everything You Need to Launch and Grow',
	subtitle: 'Powerful Features',
	text: 'Our platform is packed with smart tools designed to help you move faster, work smarter, and achieve more—without unnecessary complexity.'
}
// - CTA
const ctaData = {
	title: 'Launch your next big idea today',
	text: 'Join creators, teams, and startups already turning their ideas into reality. Get started in minutes and see how simple launching can be when everything works together seamlessly.',
	buttonLink: '/pricing',
	buttonText: 'Try it for free!'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={heroData.title} subtitle={heroData.subtitle} text={heroData.text} />
	<BasicFeatures />
	<CTA
		title={ctaData.title}
		text={ctaData.text}
		buttonLink={ctaData.buttonLink}
		buttonText={ctaData.buttonText}
	/>
</Layout>
