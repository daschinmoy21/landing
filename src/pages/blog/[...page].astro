---
// Blog Page
// ------------
// Description: The blog page is a page that displays all the blog posts.

// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - Blocks
import Hero from '../../components/blocks/hero/SimpleHeroBasic.astro'
import PostCards from '../../components/blocks/blog/PostCards.astro'

// - Collection
import { getCollection } from 'astro:content'

export async function getStaticPaths({ paginate }: any) {
	const allPosts = await getCollection('blog', ({ id }) => id)
	return paginate(allPosts, { pageSize: 100 })
}
const { page } = Astro.props as any

// Content
// - SEO
const SEO = {
	title: 'Mizu Light Astro Theme | Blog',
	description:
		'Read the latest articles, tips, and insights on building fast, modern Astro websites with Mizu Light. Stay inspired and learn from our design and development guides.'
}

// Sort blog posts by publication date (newest first)
const sortedBlogPosts = page.data.sort((a: any, b: any) => {
	return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
})
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero
		subtitle="Insights & Ideas"
		title="Fresh perspectives from the team"
		text="Stay up to date with the latest articles, resources, and practical tips. Our blog covers design, technology, and everything in between."
	/>
	<PostCards data={sortedBlogPosts} />
</Layout>
